########################################
# Alias
########################################

# ls
if whence gls > /dev/null; then
  alias ls='gls --color'
else
  alias ls='ls -G'
fi
alias ll='ls -l'
alias la='ls -al'

# git
alias g='git'
alias gi='git init'

alias ga='git add'
alias gaa='git add -A'
alias gco='git commit'
alias gcoa='git commit --amend'
alias gcoe='git commit --allow-empty'

alias gb='git branch'
alias gbd='git branch -d'
alias gbc='git checkout -b'

alias gc='git checkout'
alias gcm='git-checkout-master'

alias gm='git merge'
alias gr='git rebase'

alias gs='git status'
alias gst='git status'

alias gd='git diff'
alias gdh='git diff HEAD~ HEAD'
alias gbl='git blame'

alias gps='git push'
alias gpso='git push --set-upstream origin HEAD'
alias gpsf='git push --force-with-lease'

alias gf='git fetch'
alias gpl='git pull'
alias gplr='git pull --rebase'

alias grau='git remote add upstream'
alias gplu='git pull upstream master'

# Perl
alias cpan='cpanm'

alias cm='cpanm'
alias cmu='cpanm -U'
alias cmi='cpanm --installdeps .'

alias pr='prove'
alias ci='carton install'
alias ce='carton exec -- '
alias cep='carton exec -- perl -Ilib'
alias cepr='carton exec -- prove'

# etc
alias cl='clear'
alias pd='popd'

alias ag='ag -S'
alias diff='colordiff -u'
alias tree='tree -N'
alias vi='nvim'
alias vim='nvim'
alias mman='tldr'

alias gip='curl globalip.me'
alias lo='logout'
